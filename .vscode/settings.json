{
    // Theme
    "workbench.colorTheme": "Learn with Sumit - Professional",
    // "workbench.colorTheme": "Learn with Sumit Official Theme",

    // config related to code formatting
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "[javascript]": {
        "editor.formatOnSave": false,
        "editor.defaultFormatter": null
    },

    "javascript.validate.enable": false, //disable all built-in syntax checking
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true,
        "source.fixAll.tslint": true,
        "source.organizeImports": true
    },
    "eslint.alwaysShowStatus": true,
    // emmet
    "emmet.triggerExpansionOnTab": true,
    "cSpell.words": ["comix", "fieldname", "inhouse", "remo", "remoforce"],
    "workbench.colorCustomizations": {
        "activityBar.activeBackground": "#068b8b",
        "activityBar.background": "#068b8b",
        "activityBar.foreground": "#e7e7e7",
        "activityBar.inactiveForeground": "#e7e7e799",
        "activityBarBadge.background": "#fba3fb",
        "activityBarBadge.foreground": "#15202b",
        "commandCenter.border": "#e7e7e799",
        "sash.hoverBorder": "#068b8b",
        "statusBar.background": "#045a5a",
        "statusBar.foreground": "#e7e7e7",
        "statusBarItem.hoverBackground": "#068b8b",
        "statusBarItem.remoteBackground": "#045a5a",
        "statusBarItem.remoteForeground": "#e7e7e7",
        "titleBar.activeBackground": "#045a5a",
        "titleBar.activeForeground": "#e7e7e7",
        "titleBar.inactiveBackground": "#045a5a99",
        "titleBar.inactiveForeground": "#e7e7e799"
    },
    "peacock.color": "#045A5A",
    "turboConsoleLog.logMessagePrefix": "ðŸŒ¼",
    "turboConsoleLog.logMessageSuffix": "ðŸŒ¼",

    "turboConsoleLog.insertEmptyLineAfterLogMessage": true,

    "turboConsoleLog.insertEnclosingClass": true,
    "turboConsoleLog.delimiterInsideMessage": "ðŸ”¥ðŸ”¥",
    "turboConsoleLog.quote": "'",
    "turboConsoleLog.addSemicolonInTheEnd": true,
    "editor.fontSize": 12
}
